<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recordar_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walasys.conductor.Modulos.Inicial.RecordarPass">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/divSup"
                android:background="@color/colorSecundario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:background="@drawable/fondo_sombra_blanco"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="35sp"
                    android:paddingBottom="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:paddingTop="10sp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recuperar Contraseña"
                        android:textSize="@dimen/tam8"
                        android:fontFamily="@string/tipoLetra"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorSecundario"
                        />

                    <RelativeLayout
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgLogoUser"
                            android:src="@mipmap/user"
                            android:padding="10sp"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/estilo_icon_txt"
                            />

                        <EditText
                            android:layout_toRightOf="@id/imgLogoUser"
                            android:id="@+id/txtEmail"
                            android:background="@drawable/estilo_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:paddingTop="5sp"
                            android:paddingLeft="10sp"
                            android:gravity="center_vertical"
                            android:paddingBottom="5sp"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/tam3"
                            android:fontFamily="@string/tipoLetra"
                            android:layout_marginLeft="-2sp"
                            android:inputType="text"
                            android:hint="Email" />

                    </RelativeLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="20sp"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:text="Enviar correo"
                        android:textSize="@dimen/tam3"
                        android:layout_marginBottom="15sp"
                        android:background="@drawable/boton_tema"
                        android:onClick="enviarCorreo"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="1. Ingrese su Dirección de Correo Electronico"
                        />

                    <TextView
                        android:layout_marginTop="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="2. Se le enviará un Email, con un enlace para cambiar su Contraseña"
                        />

                    <TextView
                        android:layout_marginTop="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="3. Tendra 20 Minutos para cambiar su Contraseña"
                        />

                    <TextView
                        android:layout_marginTop="8sp"
                        android:layout_marginBottom="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Nota: El correo debe coincidir, al que utilizó en su registro."
                        />

                </LinearLayout>

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:textColor="#ffffff"
                    android:padding="10sp"
                    android:textSize="@dimen/tam4"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/efecto_pulsar"
                    android:clickable="true"
                    android:onClick="volver"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
