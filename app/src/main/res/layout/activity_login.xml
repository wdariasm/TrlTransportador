<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walasys.trasnportador.Modulos.Inicial.Login">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/divSup"
                android:background="@color/colorSecundario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:background="@drawable/fondo_sombra_blanco"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="35sp"
                    android:paddingBottom="10sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:paddingTop="10sp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inicio de sesión"
                        android:textSize="@dimen/tam8"
                        android:fontFamily="@string/tipoLetra"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorSecundario"
                        />

                    <RelativeLayout
                        android:layout_marginTop="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgLogoUser"
                            android:src="@mipmap/user"
                            android:padding="10sp"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/estilo_icon_txt"
                            />

                        <EditText
                            android:layout_toRightOf="@id/imgLogoUser"
                            android:id="@+id/txtUsuario"
                            android:background="@drawable/estilo_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:paddingTop="5sp"
                            android:paddingLeft="10sp"
                            android:gravity="center_vertical"
                            android:paddingBottom="5sp"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/tam3"
                            android:fontFamily="@string/tipoLetra"
                            android:layout_marginLeft="-2sp"
                            android:inputType="text"
                            android:hint="Usuario" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgLogoPass"
                            android:src="@mipmap/key"
                            android:padding="10sp"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:background="@drawable/estilo_icon_txt"
                            />

                        <EditText
                            android:id="@+id/txtPass"
                            android:background="@drawable/estilo_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:paddingTop="5sp"
                            android:paddingLeft="10sp"
                            android:layout_toRightOf="@id/imgLogoPass"
                            android:gravity="center_vertical"
                            android:paddingBottom="5sp"
                            android:maxLines="1"
                            android:text=""
                            android:textSize="@dimen/tam3"
                            android:fontFamily="@string/tipoLetra"
                            android:inputType="textPassword"
                            android:layout_marginLeft="-2sp"
                            android:hint="Contraseña" />

                    </RelativeLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginTop="30sp"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:text="Iniciar sesión"
                        android:textSize="@dimen/tam3"
                        android:layout_marginBottom="15sp"
                        android:background="@drawable/boton_tema"
                        android:onClick="login"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿ Olvidó su contaseña ?"
                        android:textSize="@dimen/tam3"
                        android:padding="5sp"
                        android:textColor="@color/colorSecundario"
                        android:fontFamily="@string/tipoLetra"
                        android:background="@drawable/efecto_pulsar"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="20sp"
                        android:clickable="true"
                        android:onClick="recordarPass"
                        />

                </LinearLayout>

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurar servidor"
                    android:textColor="#ffffff"
                    android:padding="10sp"
                    android:textSize="@dimen/tam4"
                    android:layout_marginLeft="5sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/efecto_pulsar"
                    android:clickable="true"
                    android:onClick="irConfigServidor"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
