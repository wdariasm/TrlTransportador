<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.walasys.conductor.Modulos.Configuracion.Perfil">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/activity_perfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.walasys.conductor.Modulos.Configuracion.Perfil">

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="16sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="20sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:background="@drawable/fondo_sombra_blanco_redondo"
                    >

                    <ImageView
                        android:id="@+id/imgFoto"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtNombre"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="text"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtEmail"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="textEmailAddress"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono principal"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtTelefono1"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="number"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono 2"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtTelefono2"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="number"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono 3"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtTelefono3"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="number"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escolaridad"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtEscolaridad"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="5sp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="text"
                    android:hint="" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observación"
                    android:textSize="@dimen/tam4"
                    android:fontFamily="@string/tipoLetra"
                    android:textColor="#000000"
                    />

                <EditText
                    android:layout_marginTop="5sp"
                    android:id="@+id/txtObservacion"
                    android:background="@drawable/estilo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:paddingTop="5sp"
                    android:paddingLeft="10sp"
                    android:gravity="start"
                    android:paddingBottom="5sp"
                    android:text=""
                    android:textSize="@dimen/tam3"
                    android:fontFamily="@string/tipoLetra"
                    android:inputType="text"
                    android:hint="" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:text="Actualizar datos"
                    android:textSize="@dimen/tam3"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/boton_secundario"
                    android:onClick="actualizarDatos"
                    />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>