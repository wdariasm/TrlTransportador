<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    android:minWidth="400dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorGrisClaro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar servidor"
            android:textSize="@dimen/tam6"
            android:fontFamily="@string/tipoLetra"
            android:gravity="center_horizontal"
            android:textColor="@color/colorSecundario"
            />

        <EditText
            android:layout_toRightOf="@id/imgLogoUser"
            android:id="@+id/txtRuta"
            android:background="@drawable/estilo_txt"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:paddingTop="5sp"
            android:paddingLeft="10sp"
            android:gravity="center_vertical"
            android:paddingBottom="5sp"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/tam3"
            android:fontFamily="@string/tipoLetra"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:inputType="text"
            android:hint="Ruta servidor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:text="Guardar"
            android:textSize="@dimen/tam3"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/boton_tema"
            android:id="@+id/btnGuardar"
            />

    </LinearLayout>

</LinearLayout>