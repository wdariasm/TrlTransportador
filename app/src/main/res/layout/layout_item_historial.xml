<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsable"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblResponsable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GILMAR OCAMPO NIEVES"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3004061405"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="8sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T. servicio"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblTServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSFER"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T. vehiculo"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblTVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTOMÃ“VIL"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FINALIZADO"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/12/2016 12:00 AM"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrato"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1600028"
                android:textColor="#000000"
                android:fontFamily="@string/tipoLetra"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textColor="#000000"
                android:textSize="@dimen/tam4"
                />

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.000.000"
                android:textColor="@color/colorVerde"
                android:textSize="@dimen/tam3"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>